

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<div class="row">
    <div class="large-8 small-12 columns loop">
        <article class="{{post_class}}">
            <header class="post-header">
                <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            </header>
            <section class="post-excerpt">
				<div id="post-image">
				<a class="read-more" href="{{url}}"><img src={{image}}></a>
					
				</div>
                <p>{{excerpt words="40"}}... </p>
            </section>
            <footer class="post-meta">
                {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Author image" nopin="nopin" />{{/if}}
                {{author}}
                {{tags prefix=" on "}}
                <time class="post-date" datetime="{{date format='MMMM-DD-YYYY'}}">{{date format="MMMM DD, YYYY"}}</time>
            </footer>
        </article>
    </div>
</div>
{{/foreach}}

